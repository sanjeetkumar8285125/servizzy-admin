    </nav>
    <div class="container mt-5">
          <div class="modal-body">
            <form method="POST" action="/cleaningService/edit">
                <input type="hidden" name="id" value="<%=data._id%>">
              <div class="modal-body">
                <div class="form-group">
                  <label for="desc1">Description 1</label>
                  <textarea
                    class="form-control"
                    name="desc1"
                    id="desc1"
                    cols="10"
                    rows="2"
                    required
                  > <%= typeof data.warnOne!='undefined' ? data.warnOne :'' %></textarea>
                </div>
                <div class="form-group">
                  <label for="desc2">Description 2</label>
                  <textarea
                    class="form-control"
                    name="desc2"
                    id="desc2"
                    cols="10"
                    rows="2"
            required
                  > <%= typeof data.warnTwo!='undefined' ? data.warnTwo :'' %></textarea>
                </div>
                <div class="form-group">
                  <label for="price">Price</label>
                  <input
                    type="text"
                    class="form-control"
                    name="price"
                    id="price"
                    value="<%= typeof data.price!='undefined' ? data.price :'' %>"
                  />
                </div>
                <div class="form-group">
                  <label for="time">Time</label>
                  <input
                    type="text"
                    class="form-control"
                    name="time"
                    id="time"
                    value="<%= typeof data.time!='undefined' ? data.time :'' %>"
                  />
                </div>
              </div>
              <div
                class="modal-footer border-top-0 d-flex justify-content-center"
              >
                <button type="submit" class="btn btn-warning">Update</button>
              </div>
            </form>
          </div>
          <!-- <div class="modal-footer">
